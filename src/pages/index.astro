---
import Button from "@/components/Button.astro";
import Layout from "@/layouts/Layout.astro";
import PFP from "@/assets/images/pfp.png";
import { Image } from "astro:assets";
import { basics } from "@cv";

const { name, label, summary } = basics;
---

<Layout title="Rxyhn">
  <div
    class="relative z-20 mx-auto mt-16 w-full max-w-4xl px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div
      class="flex flex-col items-center justify-between gap-x-4 md:flex-row md:gap-x-0"
    >
      <div class="relative w-full">
        <a
          href="/"
          class="block bg-opacity-50 bg-gradient-to-b from-neutral-50 to-neutral-400 bg-clip-text text-4xl font-bold tracking-tight text-transparent lg:text-5xl"
        >
          <h1>
            Hello, I'm {name}.
          </h1>
        </a>
        <h2 class="mt-2 text-sm font-medium text-neutral-400 lg:text-lg">
          {label}.
        </h2>
        <h2 class="mt-2 text-sm font-medium text-neutral-400 lg:text-lg">
          {summary}.
        </h2>
        <Button text="About Me." link="/about" />
      </div>
      <div
        class="h-full w-full -translate-y-px translate-x-0 rounded-2xl border border-dashed border-neutral-700 bg-gradient-to-r from-neutral-950 via-black to-neutral-950 lg:h-[420px]"
      >
        <Image
          src={PFP}
          alt="Rayhan Pratama"
          loading="eager"
          class="h-full w-full bg-center object-cover"
        />
      </div>
    </div>
  </div>
</Layout>
