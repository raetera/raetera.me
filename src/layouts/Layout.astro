---
import NavBar from "@/components/NavBar.astro";
import Starry from "@/components/Starry";
import Square from "@/components/Square.astro";
import { basics } from "@cv";
const { name } = basics;
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="../favicon.png" />
    <script src="../styles/global.css"></script>
  </head>
  <body
    class="relative z-10 bg-neutral-950 leading-relaxed tracking-wide text-neutral-200 antialiased selection:bg-neutral-300 selection:text-neutral-900"
  >
    <Square />
    <NavBar />
    <Starry
      client:idle
      id="tsparticlesfullpage"
      background="transparent"
      minSize={0.6}
      maxSize={1.4}
      opacity={0.2}
      particleDensity={100}
      className="fixed z-0 h-full w-full"
      particleColor="#FFFFFF"
    />
    <main class="flex flex-grow flex-col items-center justify-center">
      <slot />
    </main>
    <footer class="fixed bottom-0 left-0 z-50 h-14 w-full print:hidden">
      <div
        class="mx-auto h-full w-full items-center border-l-0 border-r-0 border-t border-neutral-600/40 bg-neutral-900/60 py-4 pl-6 pr-4 text-center text-xs backdrop-blur-2xl"
      >
        Â© {new Date().getFullYear()}
        {name}. All rights reserved.
      </div>
    </footer>
    <script src="../scripts/main.ts"></script>
  </body>
</html>
