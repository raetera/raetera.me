---
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Rxyhn">
  <div
    class="relative z-20 mx-auto mt-16 w-full max-w-4xl px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div
      class="flex flex-col items-center justify-between gap-x-4 md:flex-row md:gap-x-0"
    >
      <div class="relative w-full">
        <h1
          class="mb-5 text-4xl font-bold leading-tight dark:text-white md:text-4xl lg:text-6xl"
        >
          Hello, I'm Rayhan Pratama.
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          Computer Science Student at Bina Nusantara University. <br
            class="hidden lg:block"
          />With a deep passion for Software Engineering, AI, and Blockchain
          technology.
        </p>
        <Button text="About Me." link="/about" />
      </div>
      <div
        class="h-full w-full -translate-y-px translate-x-0 rounded-2xl border border-dashed border-neutral-300 bg-red-400 bg-gradient-to-r from-white via-neutral-50 to-white dark:border-neutral-700 dark:from-neutral-950 dark:via-black dark:to-neutral-950 lg:h-[420px]"
      >
        <img
          src="/pfp.png"
          loading="eager"
          decoding="auto"
          class="h-full w-full bg-center object-cover"
        />
      </div>
    </div>
  </div>
</Layout>
