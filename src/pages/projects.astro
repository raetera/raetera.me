---
import Card from "@/components/Card.astro";
import Layout from "@/layouts/Layout.astro";
import Heading from "@/components/Heading.astro";
import { SITE } from "@/consts";
import { projects } from "@cv";
---

<Layout title="Projects" description={SITE.DESCRIPTION}>
  <div
    class="relative z-20 mx-auto flex min-h-screen w-full max-w-4xl flex-col items-center justify-center px-7 xl:px-0"
  >
    <Heading
      title="My Projects"
      description="Explore a collection of my projects here. As an open-source enthusiast and maintainer, I'm passionate about the collaborative and knowledge-sharing nature of open source."
    />
    <div
      class="z-50 my-8 grid w-full grid-cols-1 items-stretch gap-7 sm:grid-cols-2 sm:gap-5"
    >
      {
        projects.map(({ url, description, highlights, name }) => (
          <Card
            url={url}
            description={description}
            highlights={highlights}
            name={name}
          />
        ))
      }
    </div>
  </div>
</Layout>
